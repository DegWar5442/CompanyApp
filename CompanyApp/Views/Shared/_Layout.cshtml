<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CompanyApp</title>
   
    <script src="https://cdn.tailwindcss.com"></script>
    <style>
        body {
            
        @@apply bg-gray-50 text-gray-800;
        }
        .container {
        @@apply max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8;
        }
       
        .nav-link {
        @@apply hover:underline hover:text-blue-100 transition-colors duration-200 px-3 py-2 rounded-md;
        }
    </style>
</head>
<body>
    <div class="container">
       
        <header class="bg-gradient-to-r from-blue-500 to-blue-600 text-white p-6 rounded-xl shadow-md mb-8">
            <nav class="flex flex-col sm:flex-row justify-between items-center">
                <div class="text-3xl font-bold tracking-tight mb-4 sm:mb-0">CompanyApp</div>
                <ul class="flex flex-wrap justify-center sm:justify-end space-x-0 sm:space-x-6 text-lg">
                    <li><a asp-area="" asp-controller="Home" asp-action="Index" class="nav-link">Home</a></li>
                    <li><a asp-area="" asp-controller="Personnel" asp-action="Index" class="nav-link">Personnel</a></li>
                    <li><a asp-area="" asp-controller="Payroll" asp-action="Report" class="nav-link">Payroll</a></li>
                </ul>
            </nav>
        </header>

        
        <main role="main">
            @RenderBody()
        </main>

        
        <footer class="mt-12 text-center text-gray-600 text-sm py-4 border-t border-gray-200">
            <p>&copy; 2025 CompanyApp. All rights reserved.</p>
        </footer>
    </div>

    
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
