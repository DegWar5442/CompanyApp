@model CompanyApp.ViewModels.EmployeeListViewModel

@{
    ViewData["Title"] = "All Employees";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-12">
            <h3 class="p-4">All Employees</h3>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form class="d-flex" asp-action="Index" asp-controller="Employee">
                <input name="searchString" class="form-control me-1" type="search" placeholder="Search" aria-label="Search" value="@ViewData["CurrentFilter"]">
                <button class="btn btn-dark" type="submit">Search by name</button>
            </form>
        </div>
        <div class="col-md-6">
            <a asp-action="Index" class="text-dark">Back to Full List</a>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12 p-4">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col"><a class="text-dark" asp-controller="Employee" asp-action="Index" asp-route-sortOrder="@ViewData["NameSortParam"]" asp-route-currentFilter="@ViewData["CurrentFilter"]">FirstName</a></th>
                        <th scope="col">LastName</th>
                        <th scope="col">MiddleName</th>
                        <th scope="col"><a asp-action="Index" asp-route-sortOrder="@ViewData["BirthDateSortParm"]" asp-route-currentFilter="@ViewData["CurrentFilter"]" class="text-dark">BirthDate</a></th>
                        <th scope="col">Phone</th>
                        <th scope="col">HireDate</th>
                        <th scope="col">Salary</th>
                        <th scope="col">Department</th>
                        <th scope="col">Position</th>
                        <th scope="col">Address</th>
                        
                        <th></th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var employee in Model.Employees)
                    {
                        <tr>
                            <th scope="row">@employee.Id</th>
                            <td>@employee.FirstName</td>
                            <td>@employee.LastName</td>
                            <td>@employee.MiddleName</td>
                            <td>@employee.BirthDate.ToString("yyyy-MM-dd")</td>
                            <td>@employee.Phone</td>
                            <td>@employee.HireDate.ToString("yyyy-MM-dd")</td>
                            <td>@employee.Salary.ToString("C")</td>
                            <td>@employee.DepartmentName</td>
                            <td>@employee.PositionName</td>
                            <td>@employee.FullAddress</td>
                            
                            <td><a class="btn btn-dark" asp-controller="Employee" asp-action="Edit" asp-route-id="@employee.Id">Edit</a></td>
                            <td><a class="btn btn-danger" asp-action="Delete" asp-controller="Employee" asp-route-id="@employee.Id" onClick="return confirm('Are you sure you want to delete this employee?')">Delete</a></td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
    
</div>